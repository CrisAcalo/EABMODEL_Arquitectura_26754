@using Comercializadora.Shared.Services
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@implements IDisposable

@if (AuthService.IsAuthenticated)
{
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid navbar-content">
            <!-- Brand -->
            <a class="navbar-brand fw-bold" href="">
                🏪 Comercializadora
            </a>

            <!-- Toggler for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"
                    onclick="toggleNavbar()">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            🏠 Inicio
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="products">
                            📦 Productos
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="venta">
                            🧾 Nueva Venta
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="consultas">
                            📊 Consultas
                        </NavLink>
                    </li>
                </ul>
                
                <!-- User menu -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle user-menu" href="#" role="button" 
                           data-bs-toggle="dropdown" aria-expanded="false"
                           onclick="toggleUserMenu()">
                            👤 @AuthService.CurrentUser
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" id="userDropdown">
                            <li>
                                <span class="dropdown-item-text">
                                    <small class="text-muted">Conectado como:</small><br>
                                    <strong>@AuthService.CurrentUser</strong>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <button class="dropdown-item logout-btn" @onclick="HandleLogout">
                                    🚪 Cerrar Sesión
                                </button>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <script>
        function toggleNavbar() {
            const navbar = document.getElementById('navbarNav');
            if (navbar) {
                if (navbar.classList.contains('show')) {
                    navbar.classList.remove('show');
                } else {
                    navbar.classList.add('show');
                }
            }
        }
        
        function toggleUserMenu() {
            const dropdown = document.getElementById('userDropdown');
            if (dropdown) {
                if (dropdown.classList.contains('show')) {
                    dropdown.classList.remove('show');
                } else {
                    dropdown.classList.add('show');
                }
            }
        }
        
        // Cerrar dropdown al hacer clic fuera
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('userDropdown');
            const toggle = document.querySelector('.user-menu');
            
            if (dropdown && toggle && !toggle.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });
    </script>
}

<script>
    function toggleNavbar() {
        const navbar = document.getElementById('navbarNav');
        if (navbar) {
            if (navbar.classList.contains('show')) {
                navbar.classList.remove('show');
            } else {
                navbar.classList.add('show');
            }
        }
    }
    
    function toggleUserMenu() {
        const dropdown = document.getElementById('userDropdown');
        if (dropdown) {
            if (dropdown.classList.contains('show')) {
                dropdown.classList.remove('show');
            } else {
                dropdown.classList.add('show');
            }
        }
    }
    
    // Cerrar dropdown al hacer clic fuera
    document.addEventListener('click', function(event) {
        const dropdown = document.getElementById('userDropdown');
        const toggle = document.querySelector('.user-menu');
        
        if (dropdown && toggle && !toggle.contains(event.target) && !dropdown.contains(event.target)) {
            dropdown.classList.remove('show');
        }
    });
</script>

@code {
    protected override void OnInitialized()
    {
        // Suscribirse a cambios de autenticación para actualizar la UI
        AuthService.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private void OnAuthenticationStateChanged(bool isAuthenticated)
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", replace: true);
    }

    public void Dispose()
    {
        AuthService.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}

