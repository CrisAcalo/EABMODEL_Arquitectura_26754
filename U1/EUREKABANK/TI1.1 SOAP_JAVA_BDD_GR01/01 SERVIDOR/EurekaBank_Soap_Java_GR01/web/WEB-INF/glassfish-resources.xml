<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN"
  "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <!-- Connection Pool para MySQL -->
    <jdbc-connection-pool
        name="EurekaBankPool"
        res-type="javax.sql.DataSource"
        datasource-classname="com.mysql.cj.jdbc.MysqlDataSource"
        pool-resize-quantity="2"
        max-pool-size="20"
        steady-pool-size="5"
        statement-timeout-in-seconds="60">

        <property name="serverName" value="localhost"/>
        <property name="portNumber" value="3306"/>
        <property name="databaseName" value="eurekabank"/>
        <property name="user" value="eureka"/>
        <property name="password" value="admin"/>
        <property name="useSSL" value="false"/>
        <property name="allowPublicKeyRetrieval" value="true"/>
        <property name="serverTimezone" value="UTC"/>
        <property name="characterEncoding" value="UTF-8"/>
    </jdbc-connection-pool>

    <!-- JDBC Resource (JNDI) -->
    <jdbc-resource
        enabled="true"
        jndi-name="jdbc/eurekabank"
        object-type="user"
        pool-name="EurekaBankPool">
        <description>DataSource para EurekaBank MySQL</description>
    </jdbc-resource>
</resources>
