@inject SessionService SessionManager
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EurekaBank</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- Mostramos los enlaces solo si el usuario está logueado -->
        @if (SessionManager.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="transactions">
                    <span class="bi bi-arrow-left-right-nav-menu" aria-hidden="true"></span> Transacciones
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="reports">
                    <span class="bi bi-table-nav-menu" aria-hidden="true"></span> Reporte de Movimientos
                </NavLink>
            </div>

            <!-- Separador visual -->
            <hr class="mx-3 my-2 text-white-50" />

            <!-- Enlace para cerrar sesión -->
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link text-start w-100" @onclick="Logout" style="border: none; background: none; color: inherit;">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Cerrar Sesión
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Iniciar Sesión
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        // Suscribirse a los cambios del SessionService para actualizar el menú automáticamente
        SessionManager.PropertyChanged += OnSessionChanged;
        base.OnInitialized();
    }

    private async void OnSessionChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        // Cuando cambie cualquier propiedad del SessionService, actualizar la UI
        await InvokeAsync(StateHasChanged);
    }

    private void Logout()
    {
        SessionManager.Logout();
        NavigationManager.NavigateTo("/", true); // Forzar navegación completa al login
    }

    public void Dispose()
    {
        // Importante: desuscribirse del evento para evitar memory leaks
        SessionManager.PropertyChanged -= OnSessionChanged;
    }
}