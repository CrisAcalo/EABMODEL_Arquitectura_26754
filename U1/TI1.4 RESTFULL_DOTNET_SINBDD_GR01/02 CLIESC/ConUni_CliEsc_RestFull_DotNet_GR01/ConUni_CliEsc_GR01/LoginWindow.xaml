<Window x:Class="ConUni_CliEsc_GR01.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Iniciar Sesión - Conversión de Unidades"
        Height="750"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#00695C" Padding="30">
            <StackPanel>
                <TextBlock Text="INICIO DE SESIÓN"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Conversión de Unidades"
                           FontSize="14"
                           Foreground="#E0F2F1"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulario de Login -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Margin="40,40,40,40"
                Padding="30"
                Effect="{DynamicResource MaterialDesignShadowDepth2}">
            <StackPanel VerticalAlignment="Center">

                <!-- Icono de Usuario -->
                <Border Width="120"
                        Height="120"
                        CornerRadius="60"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30"
                        BorderBrush="#00695C"
                        BorderThickness="3">
                    <Border.Background>
                        <ImageBrush ImageSource="pack://application:,,,/public/images/Monster.jpg" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!-- Campo Usuario -->
                <TextBlock Text="Usuario:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#424242"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsuario"
                         FontSize="16"
                         Padding="10"
                         BorderBrush="#00695C"
                         BorderThickness="2"
                         Margin="0,0,0,20"
                         Height="50"
                         MaxWidth="300"
                         HorizontalAlignment="Stretch"/>

                <!-- Campo Contraseña -->
                <TextBlock Text="Contraseña:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#424242"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             FontSize="16"
                             Padding="10"
                             BorderBrush="#00695C"
                             BorderThickness="2"
                             Margin="0,0,0,10"
                             Height="50"
                             MaxWidth="300"
                             HorizontalAlignment="Stretch"
                             KeyDown="TxtPassword_KeyDown"/>

                <!-- Mensaje de Error -->
                <Border x:Name="pnlError"
                        Background="#FFEBEE"
                        BorderBrush="#C62828"
                        BorderThickness="2"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,10,0,10"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtMensajeError"
                               Text="Usuario o contraseña incorrectos"
                               Foreground="#C62828"
                               FontSize="13"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Botón Ingresar -->
                <Button x:Name="btnIngresar"
                        Content="INGRESAR"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#00695C"
                        BorderThickness="0"
                        Padding="20,12"
                        Margin="0,20,0,0"
                        Cursor="Hand"
                        Click="BtnIngresar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#00897B"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#004D40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
