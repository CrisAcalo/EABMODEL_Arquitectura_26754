<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConUni_CliEsc_GR01"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Class="ConUni_CliEsc_GR01.MainWindow"
        mc:Ignorable="d"
        Title="Servicios de Conversión de Unidades"
        Height="700"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#00695C" Padding="20" CornerRadius="0,0,10,10">
            <StackPanel>
                <TextBlock Text="Servicios de Conversión de Unidades"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Cliente Escritorio para conversiones de unidades"
                           FontSize="16"
                           Foreground="#E0F2F1"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenido Principal - Tres Columnas -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Columna Longitud -->
            <local:LongitudView Grid.Column="0"/>

            <!-- Columna Masa -->
            <local:MasaView Grid.Column="2"/>

            <!-- Columna Temperatura -->
            <local:TemperaturaView Grid.Column="4"/>
        </Grid>
    </Grid>
</Window>
