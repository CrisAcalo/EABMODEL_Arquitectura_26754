                "schema": {
                  "$ref": "#/components/schemas/ConversionResultModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversionResultModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Temperatura/convertir": {
      "post": {
        "tags": [
          "Temperatura"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            },
            "application/*+json": {
