{
  "openapi": "3.0.1",
  "info": {
    "title": "API de Conversi√≥n de Unidades",
    "description": "API RESTful para convertir unidades de Longitud, Masa y Temperatura",
    "contact": {
      "name": "GR01",
      "email": "info@monster.edu.ec"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Longitud/convertir": {
      "post": {
        "tags": [
          "Longitud"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversionResultModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversionResultModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Masa/convertir": {
      "post": {
        "tags": [
          "Masa"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
