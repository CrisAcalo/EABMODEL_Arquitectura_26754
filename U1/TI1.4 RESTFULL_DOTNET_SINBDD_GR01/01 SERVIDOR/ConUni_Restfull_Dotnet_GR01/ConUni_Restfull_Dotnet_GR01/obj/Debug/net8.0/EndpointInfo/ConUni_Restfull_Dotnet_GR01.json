                "schema": {
                  "$ref": "#/components/schemas/ConversionResultModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversionResultModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ConversionErrorModel": {
        "type": "object",
        "properties": {
          "codigoError": {
            "type": "string",
            "nullable": true
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          },
          "tipoError": {
            "type": "string",
            "nullable": true
          },
          "valorProblematico": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "unidad": {
            "type": "string",
            "nullable": true
          },
          "fechaError": {
            "type": "string",
            "format": "date-time"
          },
          "detalles": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ConversionRequest": {
        "type": "object",
        "properties": {
          "valor": {
            "type": "number",
            "format": "double"
          },
          "unidadOrigen": {
            "type": "string",
            "nullable": true
          },
          "unidadDestino": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ConversionResultModel": {
        "type": "object",
        "properties": {
          "exitoso": {
            "type": "boolean"
          },
          "resultado": {
            "$ref": "#/components/schemas/UnidadConversionModel"
          },
          "error": {
            "$ref": "#/components/schemas/ConversionErrorModel"
          }
        },
        "additionalProperties": false
      },
      "UnidadConversionModel": {
        "type": "object",
        "properties": {
          "valorOriginal": {
            "type": "number",
            "format": "double"
          },
          "valorConvertidoExacto": {
            "type": "number",
            "format": "double"
          },
          "valorConvertidoRedondeado": {
            "type": "number",
            "format": "double"
          },
          "unidadOrigen": {
            "type": "string",
            "nullable": true
          },
          "unidadDestino": {
            "type": "string",
            "nullable": true
          },
          "tipoConversion": {
            "type": "string",
            "nullable": true
          },
          "factorConversion": {
            "type": "number",
            "format": "double"
          },
          "fechaConversion": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
