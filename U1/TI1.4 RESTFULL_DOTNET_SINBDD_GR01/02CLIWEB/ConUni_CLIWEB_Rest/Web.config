<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appSettings>
		<!-- CONFIGURACIÓN DEL SERVIDOR REST -->
		<!-- Para desarrollo local: http://localhost:8083/api -->
		<!-- Para red local: http://192.168.0.10:8083/api (reemplaza con la IP de tu servidor) -->
		<add key="RestAPI_BaseURL" value="http://192.168.0.10:8083/api" />
		<add key="RestAPI_Timeout" value="30" />

		<!-- Credenciales de login -->
		<add key="Usuario_Valido" value="MONSTER" />
		<add key="Contrasena_Valida" value="MONSTER9" />
		<add key="Max_Intentos_Login" value="3" />

		<!-- Deshabilitar validación discreta (UnobtrusiveValidationMode) -->
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" />

		<!-- Configuración de sesiones -->
		<sessionState mode="InProc" timeout="30" />

		<!-- Habilitar validación de páginas -->
		<pages validateRequest="false" enableEventValidation="true" viewStateEncryptionMode="Auto" />
	</system.web>

	<system.webServer>
		<defaultDocument>
			<files>
				<clear />
				<add value="Login.aspx" />
				<add value="Default.aspx" />
			</files>
		</defaultDocument>

		<!-- Habilitar CORS si es necesario -->
		<httpProtocol>
			<customHeaders>
				<add name="Access-Control-Allow-Origin" value="*" />
				<add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
				<add name="Access-Control-Allow-Headers" value="Content-Type" />
			</customHeaders>
		</httpProtocol>
	</system.webServer>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>