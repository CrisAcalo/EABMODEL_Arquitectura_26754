<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             version="3.0" 
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="ComercializadoraPU" transaction-type="JTA">
        <jta-data-source>jdbc/ComercializadoraDB</jta-data-source>
        
        <!-- Entidades -->
        <class>ec.edu.monster.model.Producto</class>
        <class>ec.edu.monster.model.Factura</class>
        <class>ec.edu.monster.model.DetalleFactura</class>
        
        <properties>
            <!-- Configuración de EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            
            <!-- Configuración de caché -->
            <property name="eclipselink.cache.shared.default" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
