<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<!-- ================================================ -->
	<!-- Configuración del Servidor de Web Services      -->
	<!-- ================================================ -->
	<appSettings>
		<!-- IP del servidor donde corre el servicio WCF -->
		<!-- localhost: Si cliente y servidor están en la misma máquina -->
		<!-- 192.168.X.X: Si cliente y servidor están en máquinas diferentes -->
		<add key="servidor.ip" value="localhost" />

		<!-- Puerto del servidor (por defecto puede variar) -->
		<add key="servidor.puerto" value="56686" />

		<!-- Ruta base de los servicios -->
		<add key="servidor.ruta" value="ec/edu/monster/ws" />

		<!-- Nombres de los servicios -->
		<add key="servicio.longitud" value="LongitudService.svc" />
		<add key="servicio.masa" value="MasaService.svc" />
		<add key="servicio.temperatura" value="TemperaturaService.svc" />
	</appSettings>

	<system.serviceModel>
		<bindings>
   <basicHttpBinding>
    <binding name="BasicHttpBinding_Config" maxBufferSize="2147483647"
     maxReceivedMessageSize="2147483647">
     <readerQuotas maxDepth="32" maxStringContentLength="2147483647"
      maxArrayLength="2147483647" maxBytesPerRead="4096" maxNameTableCharCount="16384" />
    </binding>
    <binding name="BasicHttpBinding_ILongitudService" />
    <binding name="BasicHttpBinding_IMasaService" />
    <binding name="BasicHttpBinding_ITemperaturaService" />
   </basicHttpBinding>
  </bindings>
		<client>
   <endpoint address="http://localhost:56686/ec/edu/monster/ws/LongitudService.svc"
    binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ILongitudService"
    contract="LongitudServiceReference.ILongitudService" name="BasicHttpBinding_ILongitudService" />
   <endpoint address="http://localhost:56686/ec/edu/monster/ws/MasaService.svc"
    binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IMasaService"
    contract="MasaServiceReference.IMasaService" name="BasicHttpBinding_IMasaService" />
   <endpoint address="http://localhost:56686/ec/edu/monster/ws/TemperaturaService.svc"
    binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ITemperaturaService"
    contract="TemperaturaServiceReference.ITemperaturaService" name="BasicHttpBinding_ITemperaturaService" />
  </client>
	</system.serviceModel>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
</configuration>