<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<!-- ================================================ -->
	<!-- Configuración del Servidor de Web Services      -->
	<!-- ================================================ -->
	<appSettings>
		<!-- IP del servidor donde corre el servicio WCF -->
		<add key="servidor.ip" value="localhost" />
		<add key="servidor.puerto" value="56686" />
		<add key="servidor.ruta" value="ec/edu/monster/ws" />

		<!-- Nombres de los servicios -->
		<add key="servicio.longitud" value="LongitudService.svc" />
		<add key="servicio.masa" value="MasaService.svc" />
		<add key="servicio.temperatura" value="TemperaturaService.svc" />

		<!-- Desactivar validación unobtrusive (SOLUCIÓN AL ERROR) -->
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<httpRuntime targetFramework="4.7.2" />

		<!-- Configuración de sesión -->
		<sessionState mode="InProc" timeout="30" />

		<!-- Configuración de autenticación -->
		<authentication mode="Forms">
			<forms loginUrl="~/Login.aspx" timeout="30" defaultUrl="~/Default.aspx" />
		</authentication>

		<pages controlRenderingCompatibilityVersion="4.0" />
	</system.web>

	<system.serviceModel>
		<bindings>
			<basicHttpBinding>
				<binding name="BasicHttpBinding_Config"
						 maxBufferSize="2147483647"
						 maxReceivedMessageSize="2147483647">
					<readerQuotas maxDepth="32"
								  maxStringContentLength="2147483647"
								  maxArrayLength="2147483647" />
				</binding>
			</basicHttpBinding>
		</bindings>
		<client>
			<!-- Los endpoints se configurarán dinámicamente en código -->
		</client>
	</system.serviceModel>

	<system.webServer>
		<defaultDocument>
			<files>
				<clear />
				<add value="Login.aspx" />
			</files>
		</defaultDocument>
	</system.webServer>
</configuration>