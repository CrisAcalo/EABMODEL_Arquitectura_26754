        }

        /// <summary>
        /// Convierte centímetros a pulgadas y retorna resultado con manejo de errores
        /// </summary>
        public ConversionResult ConvertirCentimetroAPulgada(string centimetrosString)
        {
            // Validar y convertir string a double
            var error = BaseValidator.ValidarStringPositivo(centimetrosString, LongitudConstants.CENTIMETRO, out double centimetros);
            if (error != null)
                return ConversionResult.Fallo(error);

            try
            {
                double resultadoExacto = centimetros * LongitudConstants.CENTIMETRO_A_PULGADA;
                
