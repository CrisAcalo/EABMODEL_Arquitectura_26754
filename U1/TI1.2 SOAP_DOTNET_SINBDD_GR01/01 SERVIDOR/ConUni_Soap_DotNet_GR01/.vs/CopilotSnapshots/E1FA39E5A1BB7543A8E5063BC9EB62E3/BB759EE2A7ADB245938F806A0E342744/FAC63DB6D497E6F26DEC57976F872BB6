using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.Serialization;
using System.ServiceModel;
using System.Text;
using ConUni_Soap_DotNet_GR01.ec.edu.monster.models;

namespace ConUni_Soap_DotNet_GR01.ec.edu.monster.ws
{
    // NOTE: You can use the "Rename" command on the "Refactor" menu to change the interface name "ILongitudService" in both code and config file together.
    [ServiceContract]
    public interface ILongitudService
    {
        // Conversiones Kilómetro <-> Milla
        [OperationContract]
        ConversionResult KilometroAMilla(string kilometros);

        [OperationContract]
        ConversionResult MillaAKilometro(string millas);

        // Conversiones Metro <-> Pie
        [OperationContract]
        ConversionResult MetroAPie(string metros);

        [OperationContract]
        ConversionResult PieAMetro(string pies);

        // Conversiones Centímetro <-> Pulgada
        [OperationContract]
        ConversionResult CentimetroAPulgada(string centimetros);

        [OperationContract]
        ConversionResult PulgadaACentimetro(string pulgadas);
    }
}
