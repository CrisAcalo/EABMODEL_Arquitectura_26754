using ConUni_Soap_DotNet_GR01.ec.edu.monster.models;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.Serialization;
using System.ServiceModel;
using System.Text;

namespace ConUni_Soap_DotNet_GR01.ec.edu.monster.ws
{
    // NOTE: You can use the "Rename" command on the "Refactor" menu to change the interface name "ILongitudService" in both code and config file together.
    [ServiceContract]
    public interface ILongitudService
    {
        // Conversiones Kilómetro <-> Milla
        [OperationContract]
        ConversionResult KilometroAMilla(double kilometros);

        [OperationContract]
        ConversionResult MillaAKilometro(double millas);

        // Conversiones Metro <-> Pie
        [OperationContract]
        ConversionResult MetroAPie(double metros);

        [OperationContract]
        ConversionResult PieAMetro(double pies);

        // Conversiones Centímetro <-> Pulgada
        [OperationContract]
        ConversionResult CentimetroAPulgada(double centimetros);

        [OperationContract]
        ConversionResult PulgadaACentimetro(double pulgadas);
    }
}
