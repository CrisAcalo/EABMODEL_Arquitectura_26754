using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.Serialization;
using System.ServiceModel;
using System.Text;

namespace ConUni_Soap_DotNet_GR01.ec.edu.monster.ws
{
    // NOTE: You can use the "Rename" command on the "Refactor" menu to change the interface name "IMasaService" in both code and config file together.
    [ServiceContract]
    public interface IMasaService
    {
        // Conversiones Gramo <-> Onza
        [OperationContract]
        double GramoAOnza(double gramos);

        [OperationContract]
        double OnzaAGramo(double onzas);

        // Conversiones Gramo <-> Libra
        [OperationContract]
        double GramoALibra(double gramos);

        [OperationContract]
        double LibraAGramo(double libras);

        // Conversiones Kilogramo <-> Quintal
        [OperationContract]
        double KilogramoAQuintal(double kilogramos);

        [OperationContract]
        double QuintalAKilogramo(double quintales);
    }
}
